<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.StackLayout_1"
             BackgroundColor="#127ac7">
    <StackLayout Spacing="10" VerticalOptions="Center">
        <Label FontAttributes="Bold" FontSize="30" Text="Welcome To Xamarin" HorizontalOptions="Center"/>
        <Label FontSize="18" Text="Cross-platform apps made easy" HorizontalOptions="Center"/>

        <Button Margin="0, 10, 0, 0" BackgroundColor="#1dabf0" Text="Login" />
        <Button BackgroundColor="#1dabf0" Text="Register"/>
    </StackLayout>
</ContentPage>